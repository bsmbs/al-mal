{
    "manifest_version": 2,
    "name": "AL MAL",
    "author": "pizza61",
    "version": "0.2",
    "description": "Extends AniList with data from MyAnimeList (powered by jikan.moe)",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "applications": {
        "gecko": {
            "id": "almal@paell.xyz"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://anilist.co/*"],
            "js": ["almal.js", "compare-strings.js", "rendering.js"]
        }
    ],
    "permissions": [
        "*://anilist.co/*", "https://api.jikan.moe/*"
    ]
}